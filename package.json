{
  "name": "npm-strap",
  "version": "0.0.1",
  "description": "An npm frontend project bootstrapper, using npm itself as a build tool.",
  "main": "index.js",
  "config": {
    "source_dir": "source",
    "build_dir": "build"
  },
  "scripts": {
    "deps:get": "npm i && jspm i",
    "server": "http-server $npm_package_config_build_dir/",
    "clean": "rm -vrf $npm_package_config_build_dir/*",
    "prebuild:html": "mkdir -p $npm_package_config_build_dir",
    "prebuild:html:prod": "npm run prebuild:html",
    "build:html": "cp $npm_package_config_source_dir/*.html $npm_package_config_build_dir/",
    "build:html:prod": "htmlminify -o $npm_package_config_build_dir/index.html $npm_package_config_source_dir/index.html",
    "build:css": "cat $npm_package_config_source_dir/*.css $npm_package_config_source_dir/components/*/*.css | postcss -u cssnext -u postcss-nested -o $npm_package_config_build_dir/style.css",
    "build:css:prod": "cat $npm_package_config_source_dir/*.css $npm_package_config_source_dir/components/*/*.css | postcss -u cssnext -u postcss-nested | cleancss -o $npm_package_config_build_dir/style.css",
    "build:js": "jspm bundle-sfx $npm_package_config_source_dir/app $npm_package_config_build_dir/app.js",
    "build:js:prod": "jspm bundle-sfx --minify $npm_package_config_source_dir/app $npm_package_config_build_dir/app.js",
    "prebuild:prod": "npm run prebuild",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "build:prod": "npm run build:html:prod && npm run build:css:prod && npm run build:js:prod",
    "watch:html": "onchange $npm_package_config_source_dir/*.html -- npm run build:html",
    "watch:css": "onchange $npm_package_config_source_dir/**/*.css -- npm run build:css",
    "watch:js": "onchange '$npm_package_config_source_dir/**/*.js' -- npm run build:js",
    "watch": "parallelshell 'npm run server' 'npm run watch:html' 'npm run watch:css' 'npm run watch:js'",
    "start": "npm run build && npm run watch",
    "test": "karma start --single-run --browsers PhantomJS --reporters dots",
    "lint": "eslint $npm_package_config_source_dir"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonewebdesign/npm-strap.git"
  },
  "keywords": [
    "npm",
    "frontend",
    "build",
    "bootstrap"
  ],
  "author": "Simone Vittori",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonewebdesign/npm-strap/issues"
  },
  "homepage": "https://github.com/simonewebdesign/npm-strap#readme",
  "devDependencies": {
    "clean-css": "^3.3.5",
    "cssnext": "^1.8.0",
    "eslint": "^0.24.1",
    "html-minify": "^0.3.1",
    "http-server": "^0.8.0",
    "jspm": "^0.15.7",
    "onchange": "^1.1.0",
    "parallelshell": "^1.2.0",
    "postcss": "^4.1.16",
    "postcss-cli": "^1.4.0",
    "postcss-nested": "^0.3.2"
  },
  "jspm": {
    "directories": {},
    "devDependencies": {
      "traceur": "github:jmcriffey/bower-traceur@0.0.88",
      "traceur-runtime": "github:jmcriffey/bower-traceur-runtime@0.0.88"
    }
  }
}
